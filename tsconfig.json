{
  "include": [
    "src",
  ],
  "compilerOptions": {
    // Config from https://khalilstemmler.com/blogs/typescript/node-starter-project/
    /* Visit https://aka.ms/tsconfig to read more about the available config options */
    "target": "es5",
    "module": "CommonJS",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Our tweaks added below
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": false,
    "listEmittedFiles": true
  }
}
